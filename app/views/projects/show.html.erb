<div class="container">
  <div class="card">
    <h1><%= @project.title %></h1>
      <div class="creator">
        Created by : <%= @project.user.username %>
      </div>
    <div class="tags"><%= @project.tag1 %> / <%= @project.tag2 %> / <%= @project.tag3 %></div>
    <div class="description">
      <%= @project.description %>
      <div class="participants">
        <h3>Participants</h3>
        <div>
          <% @project.participants.each do |user| %>
          <div>
            â€¢<%= user.username || user.email %>
          </div>
            <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="cont-btn">
    <%= link_to "Go back", projects_path, class:'btn btn-primary'%>
    <div>
      <div class="btn btn-success">
        <%= link_to "Participate", project_matches_path(@project.id), method: :post unless @project.user == current_user%>
      </div>
      <% if @project.user == current_user %>
      <%= link_to "Delete Project", project_path(@project), method: :delete, class:'btn btn-alert'%>
      <% end %>
    </div>
  </div>
</div>
