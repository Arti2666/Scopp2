<div class="searchBar">
  <%= form_tag projects_path, method: :get do %>
    <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "Find a project"
    %>
    <%= submit_tag "Search", class: "btn btn-primary" %>
  <% end %>
</div>


<div class="container">
  <h1>Projects</h1>
  <div class="card-group">
    <div class="card-orga">
      <% @projects.each do |p| %>
      <div class="card text-center">
        <div class="card-body d-flex flex-column">
          <h3 class="P-title"><%= p.title %></h3>
          <p id="Owner">Lead: <%= p.user.username %></p>
          <div class="d-flex justify-content-between mt-auto align-items-center">
            <div><%= p.participants.count %> Participants</div>
            <%= link_to "Go", project_path(p), class:"btn-success go"%>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
  <div class="fixed-bottom text-center">
    <%= link_to "Add a project", new_project_path , class:"btn btn-create"%>
  </div>
